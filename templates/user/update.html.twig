{# templates/product/create.html.twig #}

{% extends 'base.html.twig' %}

{% block menu %}{{render(controller('App\\Controller\\ShopController::adminMenu',{'routeName' : app.request.attributes.get('_route')}))}}{% endblock %}
{% block body %}
<style>
    .horizontal {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-around;
    }
</style>
<h4 class="text-center">{{title}}</h4>
<div class="container">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-3 mx-auto">
            {{ form_row(form.roles) }}
            <div class="text-center">{{ form_row(form.save,{'label':'Sauvegarder', 'attr':{'class':'btn-success'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% endblock %}